Algoritmo Programa2
	//Ejercicio: El usuario da 2 valores y se tienen que sumar
	Definir nombre Como Caracter;
	Definir valor1, valor2, suma Como Real;
	
	Escribir "Cual es tu nombre?"; Sin Saltar;
	Leer nombre;
	Escribir "Dame el valor 1"; Sin Saltar;
	Leer valor1;
	Escribir "Dame el valor 2"; Sin Saltar;
	Leer valor2;

	

	
	
	
	suma = valor1 + valor2;
	
	Escribir "Hola ", nombre;
	Escribir "El valor de tu suma es: ", suma;
	
FinAlgoritmo
